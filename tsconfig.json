{
    "compilerOptions": {
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "target": "esnext",
        "sourceMap": false,
        "strict": true,
        "lib": ["esnext", "dom"],
        "paths": {
            "@": ["./src"]
        }
    },
    "exclude": ["./node_modules/**/*"],
    "include": [
        "src/**/*",
        "types/**/*",
        "./*.ts",
        "rollup.config.dev.js",
        "rollup.config.build.js"
    ]
}
